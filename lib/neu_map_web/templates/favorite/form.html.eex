<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.<p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, "Favorite Name", class: "control-label" %>
    <%= text_input f, :name, class: "form-control col-8", placeholder: get_name(@favorite) %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= submit "Update", class: "btn btn-primary mt-4" %>
  </div>
<% end %>
